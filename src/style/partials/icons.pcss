.icon {
    position: relative;
    display: inline-block;
    font-size: 0;
    line-height: 0;
    text-align: center;
    vertical-align: middle;
    transition: color $time ease,
                background-color $time ease,
                border-color $time ease,
                opacity $time ease;

    .btn & {
        margin: -2px calc($gutter / 2) 0 0;

        .no-svg & {
            display: none;
        }
    }

    &-search {
        width: 18px;
        height: 18px;
    }
}