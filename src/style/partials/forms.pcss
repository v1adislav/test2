input[type="checkbox"],
input[type="radio"] {
    position: absolute;
    clip: rect(0,0,0,0);

    & + label {
        position: relative;
        display: block;
        margin-bottom: calc($gutter / 2);
        padding-left: 30px;
        cursor: pointer;

        &:before,
        &:after {
            content: '';
            position:absolute;
            display: block;
            transition: all $time ease;
        }

        &:before {
            content: '';
            top: 0;
            left: 0;
            width: 20px;
            height: 20px;
            border: 1px solid $cl-global;
        }

        &:after {
            top: 7px;
            left: 7px;
            width: 8px;
            height: 8px;
        }
    }

    &:disabled {
        & + label {
            color: $cl-grey;
            cursor: not-allowed;

            &:before {
                border-color: $cl-grey;
            }
        }
    }

    &:checked {
        & + label:after {
            background: $cl-blue;
        }

        &:disabled + label:after {
            background: $cl-grey;
        }
    }
}

input[type="checkbox"] + label:before,
input[type="checkbox"] + label:after {
    border-radius: 2px;
}

input[type="radio"] + label:before,
input[type="radio"] + label:after {
    border-radius: 50%;
}

/* select2 */

.select2-container {
    display: block;
    margin: 0 0 calc($gutter / 2) 0;
    font-family: 'pt_sans', Arial, Helvetica, 'Helvetica CY', 'Nimbus Sans L', sans-serif;
    font-size: 14px;
    text-align: left;
    text-transform: none;

    &.select2 {
        width: 100% !important;
    }

    .select2-selection--single {
        border-color: $cl-grey;
        border-radius: 0;
        box-shadow: none;
        height: $field-height;
        line-height: calc($field-height - 2);
        transition: color $time ease,
                    background-color $time ease,
                    border-color $time ease;

        .select2-selection__rendered {
            padding-right: 10px;
            padding-left: 10px;
            line-height: $field-height;
        }

        .select2-selection__placeholder {
            color: $cl-grey;
        }

        .select2-selection__arrow {
            width: calc($field-height - 2);
            height: calc($field-height - 2);

            b {
                border-top-color: $cl-global;
                border-width: 6px 5px 0;
                margin-left: -5px;
                transition: color $time ease,
                            background-color $time ease,
                            border-color $time ease;
            }
        }
    }

    &.select2-container--focus,
    &.select2-container--open {
        .select2-selection--single {
            border-color: $cl-blue;
        }
    }

    &.select2-container--open {
        .select2-selection--single {
            .select2-selection__arrow {
                b {
                    border-bottom-color: $cl-global;
                    border-width: 0 5px 6px;
                }
            }
        }
    }

    &.select2-container--disabled {
        .select2-selection--single {
            background: $cl-lg-grey;
            border-color: $cl-dk-grey;
            color: $cl-dk-grey;

            .select2-selection__arrow {
                b {
                    border-top-color: $cl-dk-grey;
                }
            }
        }

        &.select2-container--focus,
        &.select2-container--open {
            .select2-selection--single {
                border-color: $cl-dk-grey;
            }
        }
    }

    .select2-search--dropdown {
        .select2-search__field {
            border-color: $cl-grey;
            height: 30px;
            margin: 0;
            padding: 4px 10px;
        }
    }

    .select2-results__option {
        list-style: none outside;
        margin: 0;
        padding: 4px calc($gutter / 2);

        &--highlighted[aria-selected] {
            background: $cl-blue;
            color: #fff;
        }

        &[aria-selected="true"] {
            background: $cl-lg-grey;
            color: $cl-global;

            &:hover {
                background: $cl-blue;
                color: #fff;
            }
        }
    }
}

.select2-dropdown {
    border-color: $cl-blue;
    border-radius: 0;
    font-size: 14px;
}

/* Parsley */

.parsley-error {
    border-color: $cl-red;
}

.parsley-error-message {
    color: $cl-red;
    font-size: 12px;
    margin: 0;
}

