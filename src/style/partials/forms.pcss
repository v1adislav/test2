/* Стилизация элементов форм */

label,
.label {
    display: block;
    position: relative;
    margin-bottom: calc($gutter / 4);

    &.sr-only {
        border: 0;
        position: absolute;
        overflow: hidden;
        width: 1px;
        height: 1px;
        margin: -1px;
        padding: 0;
        clip: rect(0, 0, 0, 0);
    }
}

input[type="color"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="email"],
input[type="month"],
input[type="number"],
input[type="password"],
input[type="search"],
input[type="tel"],
input[type="text"],
input[type="time"],
input[type="url"],
input[type="week"],
input:not([type]),
textarea,
select {
    border: 1px solid transparent;
    display: block;
    position: relative;
    width: 100%;
    margin: 0 0 calc($gutter / 2) 0;
    padding: 0;
    vertical-align: top;
    outline: none;
    zoom: 1;
    transition: all $time ease;

    @include field-style(
        #fff,
        #fff,
        #fff,
        #fff,
        $cl-lg-grey,

        $cl-grey,
        $cl-blue,
        $cl-blue,
        $cl-blue,
        $cl-dk-grey,

        $cl-global,
        $cl-global,
        $cl-global,
        $cl-global,
        $cl-dk-grey
    );
    @include field-size(
        $field-height,
        10px,
        5px,
        14px
    );

    &.is-disabled,
    .is-disabled &,
    &[disabled] {
        cursor: default;
        pointer-events: none;
    }

    @include placeholder {
        color: $cl-grey;
    }

    &.parsley-error {
        border-color: $cl-red;
    }
}

textarea {
    height: auto;
    resize: vertical;

    &.parsley-error {
        border-color: $cl-red;
    }
}

/* Кастомный файловый инпут */

.custom-file {
    position: relative;
    margin-bottom: calc($gutter / 2);

    @include clearfix;

    .btn {
        overflow: hidden;
        margin: 0;
        cursor: pointer;
        z-index: 1;
    }

    input[type=file],
    input[type=file]:focus,
    input[type=file]:hover {
        position: absolute;
        top: 0;
        left: 0;
        margin: 0;
        opacity: 0;
        cursor: pointer;
        z-index: 99;
    }

    &__name {
        @include button-size(
            $field-height,
            0,
            0,
            14px
        );

        display: inline-block;
        margin-left: 10px;
    }
}

