/* Spacings
   Использование: добавляются классы .m .m+ .mt++ .mv-- и т.д. (аналогично с padding)
*/

/* Переменные */

$spacing\-\-: calc($gutter / 4);
$spacing\-: calc($gutter / 2);
$spacing: $gutter;
$spacing\+: calc($gutter * 1.5);
$spacing\+\+: calc($gutter * 2);

/* Margin */
.m {
    margin: $spacing !important;

    &0 { margin: 0 !important; }

    &\-\- { margin: $spacing\-\- !important; }

    &\- { margin: $spacing\- !important; }

    &\+ { margin: $spacing\+ !important; }

    &\+\+ { margin: $spacing\+\+ !important; }

    &t {
        margin-top: $spacing !important;

        &0 { margin-top: 0 !important; }

        &\-\- { margin-top: $spacing\-\- !important; }

        &\- { margin-top: $spacing\- !important; }

        &\+ { margin-top: $spacing\+ !important; }

        &\+\+ { margin-top: $spacing\+\+ !important; }
    }

    &r {
        margin-right: $spacing !important;

        &0 { margin-right: 0 !important; }

        &\-\- { margin-right: $spacing\-\- !important; }

        &\- { margin-right: $spacing\- !important; }

        &\+ { margin-right: $spacing\+ !important; }

        &\+\+ { margin-right: $spacing\+\+ !important; }
    }

    &b {
        margin-bottom: $spacing !important;

        &0 { margin-bottom: 0 !important; }

        &\-\- { margin-bottom: $spacing\-\- !important; }

        &\- { margin-bottom: $spacing\- !important; }

        &\+ { margin-bottom: $spacing\+ !important; }

        &\+\+ { margin-bottom: $spacing\+\+ !important; }
    }

    &l {
        margin-left: $spacing !important;

        &0 { margin-left: 0 !important; }

        &\-\- { margin-left: $spacing\-\- !important; }

        &\- { margin-left: $spacing\- !important; }

        &\+ { margin-left: $spacing\+ !important; }

        &\+\+ { margin-left: $spacing\+\+ !important; }
    }

    &v {
        margin-top: $spacing !important;
        margin-bottom: $spacing !important;

        &0 {
            margin-top: 0 !important;
            margin-bottom: 0 !important;
        }

        &\-\- {
            margin-top: $spacing\-\- !important;
            margin-bottom: $spacing\-\- !important;
        }

        &\- {
            margin-top: $spacing\- !important;
            margin-bottom: $spacing\- !important;
        }

        &\+ {
            margin-top: $spacing\+ !important;
            margin-bottom: $spacing\+ !important;
        }

        &\+\+ {
            margin-top: $spacing\+\+ !important;
            margin-bottom: $spacing\+\+ !important;
        }
    }

    &h {
        margin-right: $spacing !important;
        margin-left: $spacing !important;

        &0 {
            margin-right: 0 !important;
            margin-left: 0 !important;
        }

        &\-\- {
            margin-right: $spacing\-\- !important;
            margin-left: $spacing\-\- !important;
        }

        &\- {
            margin-right: $spacing\- !important;
            margin-left: $spacing\- !important;
        }

        &\+ {
            margin-right: $spacing\+ !important;
            margin-left: $spacing\+ !important;
        }

        &\+\+ {
            margin-right: $spacing\+\+ !important;
            margin-left: $spacing\+\+ !important;
        }
    }
}

